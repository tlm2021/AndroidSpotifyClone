<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:divider="#ff1373ff"
    android:gravity="center_vertical">

       <ImageView
           android:layout_width="64dp"
           android:layout_height="64dp"
           android:id="@+id/list_item_search_result_imageview"
           android:contentDescription="@string/search_result_artist_image_description"
           android:src="@android:drawable/zoom_plate"
           android:padding="8dp" />

       <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:text="@string/search_result_artist_name_default"
              android:id="@+id/list_item_search_result_textview"
           android:gravity="left">
       </TextView>

</LinearLayout>